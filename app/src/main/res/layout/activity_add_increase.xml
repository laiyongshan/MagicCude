<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_size"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/title_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:drawableLeft="@mipmap/icon_back"
            android:drawablePadding="12dp"
            android:text="添加提额"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/bankAndnum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/title_back_tv"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_red_start"
                    android:gravity="center"
                    android:text="时间："
                    android:textColor="#000"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:background="#c0c0c0" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="请选择时间"
                    android:drawableRight="@mipmap/icon_time"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_red_start"
                    android:gravity="center"
                    android:text="创建人："
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:background="#c0c0c0" />

                <EditText
                    android:id="@+id/creater_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="请输入创建人"
                    android:textColor="#000"
                    android:textSize="14sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_red_start"
                    android:gravity="center"
                    android:text="额度："
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:background="#c0c0c0" />

                <EditText
                    android:id="@+id/amt_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:layout_weight="4"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:hint="额度"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:text="元"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_red_start"
                    android:gravity="center"
                    android:text="类型："
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#c0c0c0" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/changeType_sp"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:paddingRight="12dp"
                    android:layout_weight="4"
                    android:background="@null"
                    android:textSize="14sp"
                    app:ms_background_color="@color/white"
                    app:ms_hide_arrow="false"
                    app:ms_text_color="@color/colorPrimary"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <com.flyco.roundview.RoundTextView
        android:id="@+id/clear_rtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="清空"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        rv:rv_backgroundColor="@color/white"
        rv:rv_backgroundPressColor="@color/luncy"
        rv:rv_strokeColor="@color/colorPrimary"
        rv:rv_strokeWidth="1dp"
        rv:rv_textPressColor="@color/luncy"
        rv:rv_strokePressColor="@color/luncy"
        app:rv_cornerRadius="6dp"
        />


    <com.flyco.roundview.RoundTextView
        android:id="@+id/add_increase_rtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="14sp"
        rv:rv_backgroundColor="@color/colorPrimary"
        rv:rv_backgroundPressColor="@color/luncy"
        rv:rv_textPressColor="@color/luncy"
        app:rv_cornerRadius="6dp"
        />

</LinearLayout>