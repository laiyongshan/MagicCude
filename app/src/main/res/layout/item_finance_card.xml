<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            >

            <RelativeLayout
                android:id="@+id/finance_card_rl"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="12dp"
                android:background="@mipmap/bg_item_finance_card">

                <ImageView
                    android:id="@+id/bank_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_bank_logo"
                    android:layout_centerVertical="true"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/bank_icon"
                    android:layout_marginLeft="12dp"
                    >
                    <TextView
                        android:id="@+id/bank_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/cardowner_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="持卡人："
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/reportDate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="服务月份："
                    android:textSize="12sp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/bank_card_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="24sp"
                android:text=""
                android:padding="8dp"
                android:textColor="@color/color_black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡位"
                        android:textSize="13sp"
                        android:textColor="@color/text_color"
                        />

                    <TextView
                        android:id="@+id/card_seri_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/color_black"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="业务员"
                        android:textSize="13sp"
                        android:textColor="@color/text_color"
                        />

                    <TextView
                        android:id="@+id/sales_man_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/color_black"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="业务员分润"
                        android:textSize="13sp"
                        android:textColor="@color/text_color"
                        />

                    <TextView
                        android:id="@+id/sales_man_profit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/color_black"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成本"
                        android:textSize="13sp"
                        android:textColor="@color/text_color"
                        />

                    <TextView
                        android:id="@+id/tranCost_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/color_black"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收益"
                        android:textSize="13sp"
                        android:textColor="@color/text_color"
                        />

                    <TextView
                        android:id="@+id/revenue_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2998.09"
                        android:textSize="16sp"
                        android:textColor="@color/color_black"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>