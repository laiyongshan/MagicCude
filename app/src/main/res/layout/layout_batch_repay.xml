<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--批量操作-->
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/line" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:paddingRight="30px">

        <View
            android:layout_width="10px"
            android:layout_height="match_parent"
            android:background="@color/operationText" />

        <!--日期-->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:text="2017-10-11 11:00"
            android:textColor="@color/operationText"
            android:textSize="24px" />

        <!--银行卡号-->
        <TextView
            android:id="@+id/tv_bankcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/tv_date"
            android:text="666666****1111"
            android:textColor="@color/operationBlackText"
            android:textSize="24px" />


        <!--银行-->
        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="中国农业银行"
            android:textColor="@color/operationBlackText"
            android:textSize="24px" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line" />


    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="140px">

        <!--姓名-->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:text="你是谁"
            android:textColor="@color/blueBackground"
            android:textSize="24px" />

        <!--卡位-->
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="30px"
            android:text="@string/card_num"
            android:textColor="@color/blueBackground"
            android:textSize="24px" />

        <!--checkbox-->
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:button="@drawable/opration_checkbox" />


        <!--金额-->
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginRight="40px"
            android:layout_toLeftOf="@+id/checkbox"
            android:text="@string/money"
            android:textColor="@color/operationText"
            android:textSize="24px" />


        <!--代付-->
        <TextView
            android:id="@+id/tv_help_pay"
            android:layout_width="90px"
            android:layout_height="50px"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_money"
            android:layout_marginBottom="20px"
            android:background="@drawable/helppay"
            android:gravity="center"
            android:text="代付"
            android:textColor="@color/white"
            android:textSize="24px" />


        <!--还款-->
        <TextView
            android:id="@+id/tv_repay"
            android:layout_width="90px"
            android:layout_height="50px"
            android:layout_alignTop="@+id/tv_help_pay"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@+id/tv_help_pay"
            android:background="@drawable/repay"
            android:gravity="center"
            android:text="还款"
            android:textColor="@color/white"
            android:textSize="24px" />

    </RelativeLayout>


</LinearLayout>