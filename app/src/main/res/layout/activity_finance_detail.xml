<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/finance_detail_drawerlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_size"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/title_back_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_back"
                    android:drawablePadding="12dp"
                    android:layout_marginLeft="12dp"
                     android:layout_centerVertical="true"
                    android:text="财务详情"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/card_owner_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/title_back_tv"
                    android:layout_centerVertical="true"
                    android:paddingTop="4dp"
                    />

                <ImageView
                    android:id="@+id/filtrate_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="12dp"
                    android:layout_marginRight="12dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_filtrate" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="总消费笔数：144"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="总消费金额：￥0.00"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="总还款笔数：123"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="总还款金额：￥0.00"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="费用基数类型：固定额度"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="消费基数：￥23320.00"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="收费比例：2.00%"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="服务费用：￥23450.00"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />
            </LinearLayout>


        </LinearLayout>


        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            ></android.support.design.widget.TabLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/finance_detail_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>


    <!--侧滑菜单-->
    <RelativeLayout android:background="@color/white"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_gravity="right">

    <TextView
        android:background="#d2d2d2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/filtrate_tv"
        android:text="筛选"
        android:padding="6dp"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:layout_below="@+id/filtrate_tv">


    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        app:cardPreventCornerOverlap="true"
        rv:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/white">


        <com.flyco.roundview.RoundRelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            rv:rv_strokeColor="#909090"
            rv:rv_cornerRadius="26dp">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/channelName_sp"
                android:padding="6dp"
                app:ms_text_color="@color/colorPrimary"
                app:ms_hide_arrow="false"
                app:ms_background_color="@color/white"
                app:ms_arrow_tint="#909090"
                android:textColorHint="#909090"
                android:hint="请选择渠道名"/>

        </com.flyco.roundview.RoundRelativeLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:background="@drawable/sure_textview_bg"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/clear_filter_tv"
                android:gravity="center"
                android:text="重置"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <TextView
                android:background="@drawable/cancle_textview_bg"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/sure_filter_tv"
                android:gravity="center"
                android:text="確定"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>


    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>