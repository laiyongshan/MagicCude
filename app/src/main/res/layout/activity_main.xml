<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/blueBackground">
        <!--你好 xxxx-->
        <TextView
            android:id="@+id/tv_user"
            android:layout_width="470px"
            android:layout_height="120px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@drawable/main_user"
            android:drawableLeft="@mipmap/main_user"
            android:drawablePadding="15px"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:maxEms="8"
            android:paddingLeft="40px"
            android:text="@string/main_user"
            android:textColor="@color/white"
            android:textSize="24px" />

        <!--账单确认-->
        <TextView
            android:id="@+id/tv_bill"
            android:layout_width="140px"
            android:layout_height="120px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:layout_toRightOf="@+id/tv_user"
            android:background="@drawable/main_user"
            android:drawableTop="@mipmap/main_bill"
            android:gravity="center"
            android:paddingBottom="10px"
            android:paddingTop="20px"
            android:text="账单确认"
            android:textColor="@color/white"
            android:textSize="24px" />

        <!--数字-->
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="640px"
            android:layout_marginTop="20px"
            android:background="@drawable/main_cicle"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/loginEdit"
            android:textSize="24px"
            android:visibility="invisible" />
    </RelativeLayout>


    <!--今日操作-->

    <TextView
        android:id="@+id/tv_operation_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:background="@mipmap/main_background"
        android:drawableLeft="@mipmap/main_operation_today"
        android:gravity="center"
        android:paddingLeft="180px"
        android:paddingRight="100px"
        android:text="今日操作"
        android:textColor="@color/white"
        android:textSize="28px" />

    <!--批量还款-->
    <TextView
        android:id="@+id/tv_batch_repay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:background="@mipmap/main_background"
        android:drawableLeft="@mipmap/main_planning_query"
        android:gravity="center"
        android:paddingLeft="180px"
        android:paddingRight="100px"
        android:text="批量还款"
        android:textColor="@color/white"
        android:textSize="28px" />

    <!--收款-->
    <TextView
        android:id="@+id/tv_hand_swipe_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:background="@mipmap/main_background"
        android:drawableLeft="@mipmap/main_hand_swipe_cade"
        android:gravity="center"
        android:paddingLeft="180px"
        android:paddingRight="100px"
        android:text="收款"
        android:textColor="@color/white"
        android:textSize="28px" />

    <!--工作报表-->
    <TextView
        android:id="@+id/tv_work_report"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="34px"
        android:layout_marginRight="34px"
        android:layout_marginTop="20px"
        android:background="@drawable/main_work"
        android:drawableLeft="@mipmap/main_work_report"
        android:gravity="center"
        android:paddingLeft="240px"
        android:paddingRight="160px"
        android:text="工作报表"
        android:textColor="@color/white"
        android:textSize="28px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginTop="30px">

        <TextView
            android:id="@+id/tv_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="20px"
            android:drawableTop="@mipmap/handle"
            android:gravity="center"
            android:text="信用卡办理"
            android:textColor="@color/operationBlackText"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="20px"
            android:drawableTop="@mipmap/score"
            android:gravity="center"
            android:text="信用查询"
            android:textColor="@color/operationBlackText"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_add_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="20px"
            android:drawableTop="@mipmap/add_service"
            android:gravity="center"
            android:text="贷款业务"
            android:textColor="@color/operationBlackText"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_business_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="20px"
            android:drawableTop="@mipmap/business_school"
            android:gravity="center"
            android:text="商学院"
            android:textColor="@color/operationBlackText"
            android:textSize="24px" />

    </LinearLayout>


</LinearLayout>

