<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="6dp"
    >

    <CheckBox
        android:id="@+id/card_item_cb"
        style="@style/CustomCheckBoxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_margin="6dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/card_serial_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_1"
        android:text="1"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/bg_card"
            android:paddingBottom="12dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="6dp"
                    android:background="@mipmap/bg_item_finance_card">

                    <ImageView
                        android:id="@+id/bank_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_bank_logo"
                        android:layout_centerVertical="true"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/bank_icon"
                        android:layout_marginLeft="6dp"
                        >

                        <TextView
                            android:id="@+id/bank_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/cardowner_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:text="持卡人:"
                            android:layout_marginTop="4dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="vertical"
                        >
                    <TextView
                        android:id="@+id/serviceEndDate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务到期时间："
                        android:textSize="11sp"
                        />

                        <TextView
                            android:id="@+id/fixedLimit_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="固定额度："
                            android:textSize="11sp"
                            android:layout_marginTop="4dp"
                            />
                        <TextView
                            android:id="@+id/initAmt_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="初始金额："
                            android:textSize="11sp"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/bank_card_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:text=""
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="卡位"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/card_seri_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账单日"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/billDate_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="还款日"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/repayDate_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可用余额"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/availableAmt_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="业务员"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/salesMan_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

            <ImageView
                android:id="@+id/card_type_bg"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:src="@mipmap/bg_card_dongjie"
                android:scaleType="fitXY"
                android:visibility="gone"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>