<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="28px"
    android:paddingTop="38px">


    <EditText
        android:id="@+id/edt_bankcard"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@drawable/edt_search"
        android:hint="请输入银行卡后四位"
        android:inputType="number"
        android:lines="1"
        android:maxLength="4"
        android:paddingLeft="30px"
        android:textColor="@color/blueBackground"
        android:textColorHint="@color/edtHint"
        android:textSize="28px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_operation"
            android:layout_width="188px"
            android:layout_height="60px"
            android:background="@drawable/cb_bg"
            android:button="@null"
            android:gravity="center"
            android:text="已操作"
            android:textColor="@color/text_checked"
            android:textSize="24px" />

        <CheckBox
            android:id="@+id/cb_un_operation"
            android:layout_width="188px"
            android:layout_height="60px"
            android:layout_marginLeft="30px"
            android:background="@drawable/cb_bg"
            android:button="@null"
            android:gravity="center"
            android:text="未操作"
            android:textColor="@color/text_checked"
            android:textSize="24px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="40px"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="130px"
            android:layout_height="match_parent"
            android:background="@drawable/text_btn_press"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/text_press"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="130px"
            android:layout_height="match_parent"
            android:layout_marginLeft="100px"
            android:background="@drawable/text_btn_press"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/text_press"
            android:textSize="28px" />
    </LinearLayout>


</LinearLayout>