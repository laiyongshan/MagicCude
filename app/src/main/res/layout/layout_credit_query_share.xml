<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_credit_query"
    android:layout_width="match_parent"
    android:layout_height="120px"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_user_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_user_photo"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_user_photo"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:text="李太白"
        android:textColor="@color/blueBackground"
        android:textSize="24px"
        />

    <TextView
        android:id="@+id/tv_user_idcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_user_photo"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30px"
        android:layout_marginBottom="30px"
        android:text="440181199211130910"
        android:textColor="@color/blueBackground"
        android:textSize="24px"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginLeft="230px"
        android:textSize="24px"
        android:textColor="@color/loginHint"
        android:text="2017-08-20 20:20:20"
        />

    <Button
        android:id="@+id/btn_query_report"
        android:layout_width="170px"
        android:layout_height="60px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30px"
        android:layout_marginRight="30px"
        android:text="报告查看"
        android:textSize="28px"
        android:textColor="@color/user_portrait_report_btn_press"
        android:background="@drawable/user_portrait_report_btn"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>