<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_service_cost_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_red_start"
                android:drawablePadding="6dp"
                android:gravity="left"
                android:text="费用基数类型："
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#c0c0c0" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/serviceType_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:layout_weight="4"
                android:background="@null"
                android:textSize="14sp"
                app:ms_background_color="@color/white"
                app:ms_hide_arrow="false"
                app:ms_text_color="@color/colorPrimary"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_red_start"
                android:drawablePadding="6dp"
                android:gravity="left"
                android:text="费用基数："
                android:paddingLeft="16dp"
                android:paddingRight="0dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#c0c0c0" />

            <EditText
                android:id="@+id/serviceAmt_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:layout_weight="4"
                android:background="@null"
                android:hint="费用基数金额"
                android:inputType="numberDecimal"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="元"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_red_start"
                android:drawablePadding="6dp"
                android:gravity="left"
                android:text="收费比例："
                android:paddingLeft="16dp"
                android:paddingRight="0dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#c0c0c0" />

            <EditText
                android:id="@+id/serviceRate_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:layout_weight="4"
                android:background="@null"
                android:hint="收费比例"
                android:inputType="numberDecimal"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="%"
                android:textColor="#000"
                android:textSize="14sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_red_start"
                android:drawablePadding="6dp"
                android:gravity="left"
                android:text="服务开始时间："
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#c0c0c0" />

            <EditText
                android:id="@+id/serviceStartDate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:layout_weight="4"
                android:background="@null"
                android:hint="请选择服务开始日期"
                android:drawableRight="@mipmap/icon_time"
                android:textColor="#000"
                android:editable="false"
                android:textSize="14sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_red_start"
                android:drawablePadding="6dp"
                android:gravity="left"
                android:text="服务结束时间："
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#c0c0c0" />

            <EditText
                android:id="@+id/serviceEndDate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:layout_weight="4"
                android:background="@null"
                android:editable="false"
                android:hint="请选择截止服务日期"
                android:drawableRight="@mipmap/icon_time"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_red_start"
                android:drawablePadding="6dp"
                android:gravity="left"
                android:text="服务费实收："
                android:paddingLeft="16dp"
                android:paddingRight="26dp"
                android:textColor="#000"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#c0c0c0" />

            <EditText
                android:id="@+id/paidAmt_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:layout_weight="4"
                android:background="@null"
                android:hint="服务费实收"
                android:inputType="numberDecimal"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="元"
                android:textColor="#000"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>