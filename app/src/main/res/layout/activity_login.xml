<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--登录界面logo-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:src="@mipmap/login_logo" />
    <!--appName-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="24px" />

    <!--用户名输入框-->
    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="600px"
        android:layout_height="70px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46px"
        android:background="@drawable/login_selector"
        android:descendantFocusability="beforeDescendants"
        android:orientation="horizontal"
        android:padding="10px">

        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:src="@mipmap/login_name_foucs" />

        <View
            android:id="@+id/view_name"
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21px"
            android:background="@color/loginEdit" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="450px"
            android:layout_height="match_parent"
            android:background="@color/blueBackground"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingLeft="20px"
            android:textColor="@android:color/white"
            android:textColorHint="@color/loginHint"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="28px" />

        <ImageView
            android:paddingRight="10px"
            android:paddingLeft="10px"
            android:id="@+id/iv_name_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:src="@mipmap/dismiss"
            android:visibility="gone" />

    </LinearLayout>


    <!--密码输入框-->
    <LinearLayout
        android:id="@+id/ll_pwd"
        android:layout_width="600px"
        android:layout_height="70px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:background="@drawable/login_un_selector"
        android:orientation="horizontal"
        android:padding="10px">

        <ImageView
            android:id="@+id/iv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:src="@mipmap/login_pwd_normal" />

        <View
            android:id="@+id/view_pwd"
            android:layout_width="2px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21px"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/edt_pwd"
            android:layout_width="450px"
            android:layout_height="match_parent"
            android:background="@color/blueBackground"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="20px"
            android:textColor="@android:color/white"
            android:textColorHint="@color/loginHint"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="28px" />

        <ImageView
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:id="@+id/iv_pwd_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:src="@mipmap/dismiss"
            android:visibility="gone" />

    </LinearLayout>

    <!--记住密码-->
    <CheckBox
        android:id="@+id/cb_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95px"
        android:layout_marginTop="40px"
        android:button="@null"
        android:drawableLeft="@drawable/login_checkbox"
        android:drawablePadding="21px"
        android:paddingBottom="15px"
        android:paddingTop="15px"
        android:text="记住密码"
        android:textColor="@android:color/white"
        android:textSize="20px" />

    <!--登录-->
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="600px"
        android:layout_height="70px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:background="@drawable/login_text"
        android:clickable="true"
        android:gravity="center"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="28px" />

</LinearLayout>