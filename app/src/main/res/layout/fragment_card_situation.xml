<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/card_count_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--"
        android:gravity="center"
        android:textColor="@color/color_black"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="卡片总数量"
        android:gravity="center"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="正常使用中的卡片数"
                android:drawableLeft="@mipmap/icon_card_count"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/valid_card_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:text="30"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="冻结中的卡片数量"
                android:drawableLeft="@mipmap/icon_dongjie"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/freeze_card_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:text="0"
                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="服务已到期卡片数"
                android:drawableLeft="@mipmap/icon_daoqi"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/serviceDue_card_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:text="0"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="已下载的商户数量"
                android:drawableLeft="@mipmap/icon_download_shanghu"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/downinfo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:text="0"
                />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>