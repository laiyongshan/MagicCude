<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_detail_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_size"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/title_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:drawableLeft="@mipmap/icon_back"
                android:drawablePadding="12dp"
                android:text="卡片信息"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/bankAndnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/title_back_tv"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone"
                />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="42dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/bg_card"
                android:paddingBottom="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingTop="16dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="6dp"
                        android:background="@mipmap/bg_item_finance_card">

                        <ImageView
                            android:id="@+id/bank_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_bank_logo"
                            android:layout_centerVertical="true"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/bank_icon"
                            android:layout_marginLeft="6dp"
                            >

                            <TextView
                                android:id="@+id/bank_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/cardowner_name_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:text="持卡人:"
                                android:layout_marginTop="4dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/serviceEndDate_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务到期时间："
                                android:textSize="11sp"
                                />

                            <TextView
                                android:id="@+id/fixedLimit_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="固定额度："
                                android:textSize="11sp"
                                android:layout_marginTop="4dp"
                                />
                            <TextView
                                android:id="@+id/initAmt_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="初始金额："
                                android:textSize="11sp"
                                android:layout_marginTop="4dp"
                                />
                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/bank_card_num_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textSize="28sp"
                        android:text=""
                        android:textColor="@color/white"
                        android:layout_marginBottom="12dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="卡位"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/card_seri_num_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="4dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="账单日"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/billDate_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="4dp"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="还款日"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/repayDate_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="4dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="可用余额"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/availableAmt_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="4dp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="业务员"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/salesMan_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="4dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                <ImageView
                    android:id="@+id/card_type_bg"
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:src="@mipmap/bg_card_dongjie"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/line_color"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="卡片信息"
                android:padding="12dp"
                android:textSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginBottom="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                >

                <TextView
                    android:id="@+id/card_baseinfo_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="基本信息"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_card_info"
                    android:drawablePadding="6dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_color"
                    />

                <TextView
                    android:id="@+id/card_bill_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="账单"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_card_bill"
                    android:drawablePadding="10dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_color"
                    />

                <TextView
                    android:id="@+id/card_increase_rv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="提额"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_card_tie"
                    android:drawablePadding="10dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_color"
                    />

                <TextView
                    android:id="@+id/card_charge_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="收费记录"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_card_shoufei"
                    android:drawablePadding="10dp"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_color"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="12dp"
                android:background="@color/line_color"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="其他服务"
                android:padding="12dp"
                android:textSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginBottom="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="4"
                >

                <LinearLayout
                    android:id="@+id/freeze_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/freeze_icon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_dongjie"
                        />
                <TextView
                    android:id="@+id/freeze_card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="冻结"
                    android:layout_marginTop="6dp"
                    />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_color"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/xuqi_icon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_card_xuqi"
                        />

                <TextView
                    android:id="@+id/renewal_card_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="续期"
                    android:layout_marginTop="6dp"
                    />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_color"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/addtrand_icon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_card_addtrand" />

                <TextView
                    android:id="@+id/add_consume_refund_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="添加交易"
                    android:layout_marginTop="6dp"
                    />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_color"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/deletecard_icon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_delete_card"
                        />

                <TextView
                    android:id="@+id/delete_card_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="删除卡片"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_color"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>