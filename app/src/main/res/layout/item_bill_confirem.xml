<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:cardUseCompatPadding="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                >

                <com.rflash.magiccube.view.AlwaysMarqueeTextView
                    android:id="@+id/bankcard_name_tv"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_bank_card"
                    android:drawablePadding="12dp"
                    android:layout_centerVertical="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text=""
                    android:singleLine="true"
                    android:textColor="@color/color_black"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/bill_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#f00"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:layout_marginBottom="12dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="卡位："
                        />

                    <TextView
                        android:id="@+id/cardSeqno_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="持卡人："
                        />

                    <TextView
                        android:id="@+id/customerName_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="账单类型："
                        />

                    <TextView
                        android:id="@+id/billType_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="账单周期："
                        />

                    <TextView
                        android:id="@+id/billStart2EndDate_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="账单金额："
                        />

                    <TextView
                        android:id="@+id/billAmt_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""
                        android:textColor="#f00"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/factAmt_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="实际账单金额："
                        />

                    <EditText
                        android:id="@+id/the_fact_et"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text=""
                        android:background="#EAE9E9"
                        android:inputType="numberDecimal"
                        android:gravity="center_vertical"
                        android:padding="6dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        />

                    <com.flyco.roundview.RoundTextView
                        android:id="@+id/confirem_bill_rtv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_weight="1"
                        rv:rv_backgroundColor="#f00"
                        rv:rv_backgroundPressColor="@color/luncy"
                        rv:rv_cornerRadius="5dp"
                        android:textColor="@color/white"
                        android:text="确认"
                        android:gravity="center"
                        android:layout_marginLeft="6dp"
                        />

                    <com.flyco.roundview.RoundTextView
                        android:id="@+id/ignore_bill_rtv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_weight="1"
                        rv:rv_backgroundColor="#909090"
                        rv:rv_cornerRadius="5dp"
                        rv:rv_backgroundPressColor="@color/luncy"
                        android:textColor="@color/white"
                        android:text="忽略"
                        android:gravity="center"
                        android:layout_marginLeft="6dp"
                        />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>